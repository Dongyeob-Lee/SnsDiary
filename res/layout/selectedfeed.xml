<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <SlidingDrawer
        android:id="@+id/slidingDrawer2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:orientation="horizontal"
        android:topOffset="50dp" >

        <Button
            android:id="@+id/handle"
            android:layout_width="0sp"
            android:layout_height="0sp" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/facebookback"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/backbtn1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/gohome" />

                <Button
                    android:id="@+id/prebtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/prepage" />

                <Button
                    android:id="@+id/nextbtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/nextpage"/>

                <Button
                    android:id="@+id/syncbtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/sync" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/feedprogressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <ListView
                android:id="@+id/feedlistView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff" >
            </ListView>
        </LinearLayout>
    </SlidingDrawer>

</LinearLayout>