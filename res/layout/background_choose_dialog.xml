<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageButton 
            android:id="@+id/btn_background_select_basic"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/backgroud_subject_empty2"/>
        <ImageButton 
            android:id="@+id/btn_background_select_blue"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/backgroud_subject_blue2"/>
        <ImageButton 
            android:id="@+id/btn_background_select_green"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/backgroud_subject_diet2"/> 
    </LinearLayout>
	<LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
        <ImageButton 
            android:id="@+id/btn_background_select_yellow"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/backgroud_subject_common2"/>
        <ImageButton 
            android:id="@+id/btn_background_select_pink"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/backgroud_subject_love2"/>
        <ImageButton 
            android:id="@+id/btn_background_select_orange"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/backgroud_subject_orange2"/> 
    </LinearLayout>
    <Button 
        android:id="@+id/btn_background_select_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닫기"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>