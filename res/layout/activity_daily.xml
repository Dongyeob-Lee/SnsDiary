<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Daily"
    android:background="@drawable/bg_all" >

    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="0px"
	    android:layout_weight="1"
	    android:orientation="horizontal">
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginLeft="112dp"
	        android:layout_marginTop="18dp">
		    <ImageView 
		        android:id="@+id/daily_icon_monthly"
		        android:layout_width="125dp"
		        android:layout_height="110dp"
		        android:src="@drawable/icon_monthly"/>
		    <ImageView 
		        android:id="@+id/daily_icon_weekly"
		        android:layout_width="125dp"
		        android:layout_marginLeft="2dp"
		        android:layout_height="match_parent"
		        android:src="@drawable/icon_weekly"/>
		    <ImageView 
		        android:id="@+id/daily_icon_daily"
		        android:layout_width="125dp"
		        android:layout_marginLeft="2dp"
		        android:layout_height="match_parent"
		        android:src="@drawable/icon_daily_clicked"/>
		    <ImageView 
		        android:id="@+id/daily_icon_freenote"
		        android:layout_width="125dp"
		        android:layout_marginLeft="2dp"
		        android:layout_height="match_parent"
		        android:src="@drawable/icon_freenote"/>
		    <ImageView 
		        android:id="@+id/daily_icon_setting"
		        android:layout_width="125dp"
		        android:layout_marginLeft="4dp"
		        android:layout_height="match_parent"
		        android:src="@drawable/icon_setting"/>
	    </LinearLayout>
	   
	</LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="9"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="88dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="120dp"
		        android:background="@drawable/bg_title"
		        android:orientation="horizontal" >

		        <LinearLayout
		            android:layout_width="100dp"
		            android:layout_height="match_parent"
		            android:orientation="vertical" >

		            <TextView
		                android:id="@+id/tv_daily_yearmonth"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center_horizontal"
		                android:layout_marginTop="3dp"
		                android:text="2012.9"
		                android:textColor="#333333"
		                android:textSize="18dp" />

		            <TextView
		                android:id="@+id/tv_daily_date"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center_horizontal"
		                android:text="3"
		                android:textColor="#808080"
		                android:textSize="45dp" />

		            <TextView
		                android:id="@+id/tv_daily_dayofweek"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center_horizontal"
		                android:text="월요일"
		                android:textColor="#808080"
		                android:textSize="18dp"
		                android:textStyle="bold" />
		        </LinearLayout>

		        <LinearLayout
		            android:layout_width="335dp"
		            android:layout_height="match_parent"
		            android:orientation="vertical" >
		            <TextView 
		                android:id="@+id/tv_daily_title"
		                android:layout_width="320dp"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="25dp"
		                android:text="diary"
		                android:textSize="35dp"
		                />
		        </LinearLayout>

		       <LinearLayout
		            android:layout_width="110dp"
		            android:layout_height="match_parent"
		            android:layout_marginLeft="3dp"
		            android:orientation="vertical" >
		            <ImageView 
		                android:id="@+id/iv_daily_subject"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center_horizontal"
		                android:layout_marginTop="15dp"
		                android:src="@drawable/e0"/>
		            </LinearLayout>
		        <LinearLayout
		            android:layout_width="110dp"
		            android:layout_height="match_parent"
		            android:layout_marginLeft="5dp"
		            android:orientation="vertical" >
		            <TextView 
		                android:id="@+id/tv_daily_temperature"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="5dp"
		                android:layout_marginTop="10dp"
		                android:text="18'"
		                android:textSize="40dp"
		                android:textColor="#808080"/>
		            <ImageView 
		                android:id="@+id/iv_daily_weather"
		                android:layout_width="40dp"
		                android:layout_height="40dp"
		                android:layout_marginLeft="55dp"
		                android:src="@drawable/w_sunny"/>
		        </LinearLayout>
		    </LinearLayout>
			<RelativeLayout 
			    android:id="@+id/img_cur_diary"
			    android:layout_width="match_parent"
			    android:layout_height="880dp"
			    android:orientation="vertical">
			    <AbsoluteLayout
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentBottom="true"
			        android:layout_centerInParent="true">
		            <LinearLayout 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:orientation="horizontal">
		            	<Button 
			                android:id="@+id/btn_daily_prev"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="@string/prev"
			                android:textSize="30dp"/>
		            	<TextView 
		            	    android:id="@+id/tv_daily_page"
		            	    android:layout_width="wrap_content"
		            	    android:layout_height="wrap_content"
		            	    android:text="1/3"
		            	    android:textSize="30dp"
		            	    android:textColor="#000000"/>
			            <Button 
			                android:id="@+id/btn_daily_next"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="@string/next"
			                android:textSize="30dp"/>    
		            </LinearLayout>
		        </AbsoluteLayout>
		        <AbsoluteLayout
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentBottom="true"
			        android:layout_alignParentLeft="true">
		            <LinearLayout 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:orientation="horizontal">
		            	<ImageView 
		            	    android:id="@+id/btn_record_play"
		            	    android:layout_width="80dp"
		            	    android:layout_height="80dp"
		            	    android:src="@drawable/btn_record_play"/>
		            </LinearLayout>
		        </AbsoluteLayout>
		        <AbsoluteLayout
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentBottom="true"
			        android:layout_alignParentRight="true">
		            <LinearLayout 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:orientation="horizontal">
		            	<ImageView 
		            	    android:id="@+id/btn_feedlist_dialog"
		            	    android:layout_width="70dp"
		            	    android:layout_height="70dp"
		            	    android:src="@drawable/btn_facebook_diaryfeedlist"/>
		            </LinearLayout>
		        </AbsoluteLayout>
			</RelativeLayout>
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:orientation="horizontal">
			    <ImageView 
			        android:id="@+id/btn_daily_add"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:onClick="onMenuClick"
			        android:src="@drawable/icon_daily_add"/>
			    <ImageView 
			        android:id="@+id/btn_daily_edit"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:onClick="onMenuClick"
			        android:src="@drawable/icon_daily_edit"/>
			    <ImageView 
			        android:id="@+id/btn_daily_share"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:onClick="onMenuClick"
			        android:src="@drawable/icon_daily_share"/>
			    <ImageView 
			        android:id="@+id/btn_daily_delete"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:onClick="onMenuClick"
			        android:src="@drawable/icon_daily_delete"/>
			</LinearLayout>
	    </LinearLayout>
    </LinearLayout>
    

</LinearLayout>